# vim: ft=sshconfig

# Earlier matches take precedence, so this must go first
Include "~/.ssh/config.local"

Host github.com
  Hostname github.com
  User git
  IdentityFile ~/.ssh/id_rsa

Host gitlab.com
  Hostname gitlab.com
  User git
  IdentityFile ~/.ssh/id_rsa

# Ignore SSH keys unless specified in Host subsection, this prevents from
# leaking to random hosts.
Host *
  IdentitiesOnly yes
