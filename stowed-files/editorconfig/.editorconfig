# vim:ft=conf
# See http://editorconfig.org/ for context

# This is the topmost file
root = true

[*]
# Use unix-style newlines and include a final line break
end_of_line = lf
insert_final_newline = true
# 2 space indent
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Python overrides
[*.py]
indent_style = space
indent_size = 4
